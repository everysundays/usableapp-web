---
// Color Scheme Toggle
// Cycle through A (Navy) â†’ B (Teal) â†’ C (Slate) â†’ D (Burgundy)
---

<div class="color-toggle-container">
  <button id="colorToggle" class="color-toggle-btn" aria-label="Toggle color scheme">
    <span class="toggle-icon">ðŸŽ¨</span>
    <span class="toggle-label">
      <span class="scheme-a">Navy</span>
      <span class="scheme-b">Teal</span>
      <span class="scheme-c">Slate</span>
      <span class="scheme-d">Burgundy</span>
    </span>
  </button>
</div>

<style>
  .color-toggle-container {
    position: fixed;
    bottom: var(--space-2xl);
    right: var(--space-2xl);
    z-index: var(--z-fixed);
  }

  .color-toggle-btn {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background: var(--color-white);
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-full);
    cursor: pointer;
    font-family: var(--font-family);
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--color-primary);
    box-shadow: 0 8px 32px var(--color-shadow);
    transition: all var(--transition-base);
  }

  .color-toggle-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 48px var(--color-shadow);
    background: var(--color-primary);
    color: var(--color-white);
  }

  .toggle-icon {
    font-size: 24px;
    line-height: 1;
  }

  .toggle-label {
    position: relative;
    min-width: 100px;
  }

  .scheme-a,
  .scheme-b,
  .scheme-c,
  .scheme-d {
    display: block;
    transition: opacity var(--transition-fast);
  }

  /* Default: Show Set A label */
  :root .scheme-a {
    opacity: 1;
    position: relative;
  }

  :root .scheme-b,
  :root .scheme-c,
  :root .scheme-d {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
  }

  /* Set B active */
  :root[data-color-scheme="set-b"] .scheme-b {
    opacity: 1;
    position: relative;
  }

  :root[data-color-scheme="set-b"] .scheme-a,
  :root[data-color-scheme="set-b"] .scheme-c,
  :root[data-color-scheme="set-b"] .scheme-d {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
  }

  /* Set C active */
  :root[data-color-scheme="set-c"] .scheme-c {
    opacity: 1;
    position: relative;
  }

  :root[data-color-scheme="set-c"] .scheme-a,
  :root[data-color-scheme="set-c"] .scheme-b,
  :root[data-color-scheme="set-c"] .scheme-d {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
  }

  /* Set D active */
  :root[data-color-scheme="set-d"] .scheme-d {
    opacity: 1;
    position: relative;
  }

  :root[data-color-scheme="set-d"] .scheme-a,
  :root[data-color-scheme="set-d"] .scheme-b,
  :root[data-color-scheme="set-d"] .scheme-c {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
  }

  @media (max-width: 768px) {
    .color-toggle-container {
      bottom: var(--space-lg);
      right: var(--space-lg);
    }

    .color-toggle-btn {
      padding: var(--space-sm) var(--space-md);
      font-size: var(--text-xs);
    }

    .toggle-icon {
      font-size: 20px;
    }

    .toggle-label {
      min-width: 80px;
    }
  }
</style>

<script>
  // Color scheme toggle functionality
  function initColorSchemeToggle() {
    const toggle = document.getElementById('colorToggle');
    const html = document.documentElement;

    // Available schemes cycle: A â†’ B â†’ C â†’ D â†’ A
    const schemes = ['set-a', 'set-b', 'set-c', 'set-d'];

    // Load saved preference or default to set-a
    const savedScheme = localStorage.getItem('color-scheme') || 'set-a';
    html.setAttribute('data-color-scheme', savedScheme);

    // Cycle through schemes
    function toggleScheme() {
      const currentScheme = html.getAttribute('data-color-scheme') || 'set-a';
      const currentIndex = schemes.indexOf(currentScheme);
      const nextIndex = (currentIndex + 1) % schemes.length;
      const newScheme = schemes[nextIndex];

      html.setAttribute('data-color-scheme', newScheme);
      localStorage.setItem('color-scheme', newScheme);

      // Log for debugging
      console.log(`Color scheme changed to: ${newScheme}`);
    }

    // Add click listener
    if (toggle) {
      toggle.addEventListener('click', toggleScheme);
    }
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initColorSchemeToggle);
  } else {
    initColorSchemeToggle();
  }

  // Also run on Astro page transitions
  document.addEventListener('astro:page-load', initColorSchemeToggle);
</script>
