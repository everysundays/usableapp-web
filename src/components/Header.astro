---
import { getLangFromUrl, useTranslations } from "../utils/i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const homePath = lang === 'en' ? '/en/' : '/';
---

<header class="site-header">
  <div class="header-container">
    <a href={homePath} class="logo">
      <span class="logo-text">{t("site.title")}</span>
    </a>
    <nav class="nav">
      <a href="#what-we-do" class="nav-link">{t("nav.whatWeDo")}</a>
      <a href="#how-it-works" class="nav-link">{t("nav.howItWorks")}</a>
      <a href="#pricing" class="nav-link">{t("nav.pricing")}</a>
      
      <div class="lang-wrapper">
        {lang === 'th' ? (
          <a href="/en/" class="lang-selector">EN</a>
        ) : (
          <a href="/" class="lang-selector">TH</a>
        )}
      </div>

      <a href="#contact" class="nav-link nav-cta">{t("nav.contact")}</a>
    </nav>
    <button class="mobile-menu-btn" aria-label="Toggle menu">
      <i class="fas fa-bars"></i>
    </button>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border);
  }

  .header-container {
    max-width: var(--max-width-content);
    margin: 0 auto;
    padding: var(--space-md) var(--space-xl);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .logo-text {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-navy);
    letter-spacing: -0.02em;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: var(--space-xl);
  }

  .lang-wrapper {
    display: flex;
    align-items: center;
  }

  .lang-selector {
    background: transparent;
    border: 1px solid var(--color-navy);
    border-radius: var(--radius-sm);
    padding: var(--space-xs) var(--space-sm);
    font-size: var(--text-xs);
    color: var(--color-navy);
    cursor: pointer;
    font-weight: 600;
  }

  .nav-link {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
    transition: color var(--transition-fast);
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-navy);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-terracotta);
    transition: width var(--transition-base);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-cta {
    background-color: var(--color-navy);
    color: var(--color-white);
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-md);
  }

  .nav-cta:hover {
    background-color: var(--color-navy-light);
    color: var(--color-white);
  }

  .nav-cta::after {
    display: none;
  }

  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    font-size: var(--text-xl);
    color: var(--color-navy);
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .header-container {
      padding: var(--space-md) var(--space-lg);
    }

    .nav {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
    }
  }
</style>
