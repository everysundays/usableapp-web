---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main class="palettes-page">
    <h1>Color Palette Options</h1>
    <p class="intro">Select one that feels right for Usable App</p>

    <!-- Palette 1: Cool Slate + Sage -->
    <section class="palette palette-1">
      <div class="palette-header">
        <h2>1. Cool Slate + Sage</h2>
        <p>Calm, modern, tech-forward</p>
      </div>
      <div class="palette-demo">
        <div class="demo-block demo-base">
          <span class="swatch"></span>
          <span class="label">Base #F4F5F3</span>
        </div>
        <div class="demo-block demo-block-bg">
          <span class="swatch"></span>
          <span class="label">Block #ECEEE9</span>
        </div>
        <div class="demo-block demo-primary">
          <span class="swatch"></span>
          <span class="label">Primary #3D4F5F</span>
        </div>
        <div class="demo-block demo-accent">
          <span class="swatch"></span>
          <span class="label">Accent #7A9E7E</span>
        </div>
      </div>
      <div class="preview-card">
        <h3>Find good problems.</h3>
        <p>We help startups discover what their business really needs.</p>
        <a href="#" class="preview-btn">Learn more <i class="fas fa-arrow-right"></i></a>
      </div>
    </section>

    <!-- Palette 2: Warm Ivory + Forest -->
    <section class="palette palette-2">
      <div class="palette-header">
        <h2>2. Warm Ivory + Forest</h2>
        <p>Natural, grounded, trustworthy</p>
      </div>
      <div class="palette-demo">
        <div class="demo-block demo-base">
          <span class="swatch"></span>
          <span class="label">Base #F8F6F1</span>
        </div>
        <div class="demo-block demo-block-bg">
          <span class="swatch"></span>
          <span class="label">Block #EFEDE6</span>
        </div>
        <div class="demo-block demo-primary">
          <span class="swatch"></span>
          <span class="label">Primary #2D4A3E</span>
        </div>
        <div class="demo-block demo-accent">
          <span class="swatch"></span>
          <span class="label">Accent #C9A227</span>
        </div>
      </div>
      <div class="preview-card">
        <h3>Find good problems.</h3>
        <p>We help startups discover what their business really needs.</p>
        <a href="#" class="preview-btn">Learn more <i class="fas fa-arrow-right"></i></a>
      </div>
    </section>

    <!-- Palette 3: Stone + Deep Teal -->
    <section class="palette palette-3">
      <div class="palette-header">
        <h2>3. Stone + Deep Teal</h2>
        <p>Sophisticated, fresh, premium</p>
      </div>
      <div class="palette-demo">
        <div class="demo-block demo-base">
          <span class="swatch"></span>
          <span class="label">Base #F2F0ED</span>
        </div>
        <div class="demo-block demo-block-bg">
          <span class="swatch"></span>
          <span class="label">Block #E8E5E0</span>
        </div>
        <div class="demo-block demo-primary">
          <span class="swatch"></span>
          <span class="label">Primary #1D5C5C</span>
        </div>
        <div class="demo-block demo-accent">
          <span class="swatch"></span>
          <span class="label">Accent #E07B5E</span>
        </div>
      </div>
      <div class="preview-card">
        <h3>Find good problems.</h3>
        <p>We help startups discover what their business really needs.</p>
        <a href="#" class="preview-btn">Learn more <i class="fas fa-arrow-right"></i></a>
      </div>
    </section>

    <!-- Palette 4: Cream + Indigo -->
    <section class="palette palette-4">
      <div class="palette-header">
        <h2>4. Cream + Indigo</h2>
        <p>Classic, premium, bold</p>
      </div>
      <div class="palette-demo">
        <div class="demo-block demo-base">
          <span class="swatch"></span>
          <span class="label">Base #FAF8F5</span>
        </div>
        <div class="demo-block demo-block-bg">
          <span class="swatch"></span>
          <span class="label">Block #F0EDE7</span>
        </div>
        <div class="demo-block demo-primary">
          <span class="swatch"></span>
          <span class="label">Primary #2E3A59</span>
        </div>
        <div class="demo-block demo-accent">
          <span class="swatch"></span>
          <span class="label">Accent #D4A03C</span>
        </div>
      </div>
      <div class="preview-card">
        <h3>Find good problems.</h3>
        <p>We help startups discover what their business really needs.</p>
        <a href="#" class="preview-btn">Learn more <i class="fas fa-arrow-right"></i></a>
      </div>
    </section>

  </main>
</Layout>

<style>
  .palettes-page {
    max-width: 1100px;
    margin: 0 auto;
    padding: var(--space-xl);
  }

  .palettes-page > h1 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-sm);
  }

  .intro {
    color: var(--color-text-light);
    margin-bottom: var(--space-3xl);
  }

  .palette {
    margin-bottom: var(--space-4xl);
    padding: var(--space-2xl);
    border-radius: var(--radius-lg);
  }

  .palette-header h2 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-xs);
  }

  .palette-header p {
    font-size: var(--text-sm);
    margin-bottom: var(--space-xl);
  }

  .palette-demo {
    display: flex;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
    flex-wrap: wrap;
  }

  .demo-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
  }

  .demo-block .swatch {
    width: 80px;
    height: 80px;
    border-radius: var(--radius-md);
    border: 1px solid rgba(0,0,0,0.1);
  }

  .demo-block .label {
    font-size: var(--text-xs);
    font-family: monospace;
  }

  .preview-card {
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
  }

  .preview-card h3 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-sm);
  }

  .preview-card p {
    font-size: var(--text-sm);
    margin-bottom: var(--space-md);
  }

  .preview-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    font-weight: 600;
  }

  /* Palette 1: Cool Slate + Sage */
  .palette-1 {
    background: #F4F5F3;
  }
  .palette-1 .palette-header h2 { color: #3D4F5F; }
  .palette-1 .palette-header p { color: #6B7B8A; }
  .palette-1 .demo-base .swatch { background: #F4F5F3; }
  .palette-1 .demo-block-bg .swatch { background: #ECEEE9; }
  .palette-1 .demo-primary .swatch { background: #3D4F5F; }
  .palette-1 .demo-accent .swatch { background: #7A9E7E; }
  .palette-1 .preview-card {
    background: #ECEEE9;
  }
  .palette-1 .preview-card h3 { color: #3D4F5F; }
  .palette-1 .preview-card p { color: #5A6A75; }
  .palette-1 .preview-btn { color: #7A9E7E; }

  /* Palette 2: Warm Ivory + Forest */
  .palette-2 {
    background: #F8F6F1;
  }
  .palette-2 .palette-header h2 { color: #2D4A3E; }
  .palette-2 .palette-header p { color: #6B7265; }
  .palette-2 .demo-base .swatch { background: #F8F6F1; }
  .palette-2 .demo-block-bg .swatch { background: #EFEDE6; }
  .palette-2 .demo-primary .swatch { background: #2D4A3E; }
  .palette-2 .demo-accent .swatch { background: #C9A227; }
  .palette-2 .preview-card {
    background: #EFEDE6;
  }
  .palette-2 .preview-card h3 { color: #2D4A3E; }
  .palette-2 .preview-card p { color: #5A6355; }
  .palette-2 .preview-btn { color: #C9A227; }

  /* Palette 3: Stone + Deep Teal */
  .palette-3 {
    background: #F2F0ED;
  }
  .palette-3 .palette-header h2 { color: #1D5C5C; }
  .palette-3 .palette-header p { color: #6B6D68; }
  .palette-3 .demo-base .swatch { background: #F2F0ED; }
  .palette-3 .demo-block-bg .swatch { background: #E8E5E0; }
  .palette-3 .demo-primary .swatch { background: #1D5C5C; }
  .palette-3 .demo-accent .swatch { background: #E07B5E; }
  .palette-3 .preview-card {
    background: #E8E5E0;
  }
  .palette-3 .preview-card h3 { color: #1D5C5C; }
  .palette-3 .preview-card p { color: #5A5D58; }
  .palette-3 .preview-btn { color: #E07B5E; }

  /* Palette 4: Cream + Indigo */
  .palette-4 {
    background: #FAF8F5;
  }
  .palette-4 .palette-header h2 { color: #2E3A59; }
  .palette-4 .palette-header p { color: #6B6E75; }
  .palette-4 .demo-base .swatch { background: #FAF8F5; }
  .palette-4 .demo-block-bg .swatch { background: #F0EDE7; }
  .palette-4 .demo-primary .swatch { background: #2E3A59; }
  .palette-4 .demo-accent .swatch { background: #D4A03C; }
  .palette-4 .preview-card {
    background: #F0EDE7;
  }
  .palette-4 .preview-card h3 { color: #2E3A59; }
  .palette-4 .preview-card p { color: #5A5D62; }
  .palette-4 .preview-btn { color: #D4A03C; }
</style>
