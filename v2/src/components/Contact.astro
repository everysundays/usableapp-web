// Contact Section
// Business Card Flip Interaction
---

<section class="contact section">
  <div class="container">
    <h2 class="big-bold-text">READY TO FIND THE RIGHT PROBLEM?</h2>

    <p class="intro-text">
      Let's discover what your business needs.
    </p>

    <div class="card-container">
      <div class="business-card" id="businessCard">
        <!-- Front Side -->
        <div class="card-front">
          <div class="card-illustration">
            <!-- Line Drawing Illustration Placeholder -->
            <svg viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
              <g stroke="currentColor" stroke-width="2" fill="none">
                <!-- Simple line drawing representation of foundation layers -->
                <line x1="50" y1="250" x2="350" y2="250" stroke-linecap="round"/>
                <line x1="70" y1="220" x2="330" y2="220" stroke-linecap="round"/>
                <line x1="90" y1="190" x2="310" y2="190" stroke-linecap="round"/>
                <line x1="110" y1="160" x2="290" y2="160" stroke-linecap="round"/>
                <line x1="130" y1="130" x2="270" y2="130" stroke-linecap="round"/>
                <circle cx="200" cy="80" r="30"/>
                <path d="M 200 50 L 200 110 M 180 80 L 220 80" stroke-linecap="round"/>
              </g>
            </svg>
          </div>
          <h3>Usable App Co.</h3>
          <p>Digital Product Design Consultants</p>
          <button class="flip-btn" onclick="flipCard()">Get in Touch</button>
        </div>

        <!-- Back Side -->
        <div class="card-back">
          <h3>Usable App Co.</h3>
          <p class="tagline">Find good problems. Make good apps.</p>

          <div class="contact-details">
            <div class="contact-item">
              <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <a href="mailto:contact@usableapp.co" class="contact-link">
                contact@usableapp.co
              </a>
            </div>

            <div class="contact-item">
              <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <a href="tel:+66618317773" class="contact-link">
                +66 61 831 7773
              </a>
            </div>

            <div class="contact-item">
              <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <p class="contact-text">
                36 Thawiwattana 47<br/>
                Thawiwattana, Bangkok 10170
              </p>
            </div>
          </div>

          <p class="cta-text">Start your app's day-1 with us.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background: linear-gradient(135deg,
      rgba(100, 181, 246, 0.15) 0%,
      rgba(100, 181, 246, 0.25) 50%,
      rgba(26, 58, 82, 0.15) 100%);
  }

  .contact .big-bold-text {
    color: var(--color-primary);
  }

  .intro-text {
    font-size: var(--text-lg);
    color: var(--color-primary);
    margin: 0 auto var(--space-4xl);
    text-align: center;
    max-width: 600px;
  }

  .card-container {
    display: flex;
    justify-content: center;
    perspective: 1500px;
    margin: var(--space-4xl) auto;
  }

  .business-card {
    width: 100%;
    max-width: 600px;
    height: 450px;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .business-card.flipped {
    transform: rotateY(180deg);
  }

  .card-front,
  .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: var(--radius-lg);
    box-shadow: 0 16px 64px rgba(26, 58, 82, 0.25);
    padding: var(--space-3xl);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .card-front {
    background-color: var(--color-white);
    color: var(--color-primary);
  }

  .card-illustration {
    width: 200px;
    height: 150px;
    margin-bottom: var(--space-xl);
    color: var(--color-accent-cool);
  }

  .card-illustration svg {
    width: 100%;
    height: 100%;
  }

  .card-front h3 {
    font-size: var(--text-3xl);
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
  }

  .card-front p {
    font-size: var(--text-lg);
    color: var(--color-text-light);
    margin-bottom: var(--space-xl);
  }

  .flip-btn {
    padding: var(--space-md) var(--space-2xl);
    font-size: var(--text-lg);
    font-weight: 700;
    background-color: var(--color-primary);
    color: var(--color-white);
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .flip-btn:hover {
    background-color: var(--color-primary-light);
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(26, 58, 82, 0.4);
  }

  .card-back {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
    color: var(--color-white);
    transform: rotateY(180deg);
    text-align: center;
  }

  .card-back h3 {
    font-size: var(--text-3xl);
    color: var(--color-white);
    margin-bottom: var(--space-sm);
  }

  .tagline {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-accent-warm);
    margin-bottom: var(--space-2xl);
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
    margin-bottom: var(--space-3xl);
    text-align: left;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-lg);
  }

  .icon {
    width: 24px;
    height: 24px;
    stroke-width: 2;
    flex-shrink: 0;
  }

  .contact-link {
    color: var(--color-white);
    text-decoration: none;
    font-size: var(--text-base);
    transition: color var(--transition-fast);
  }

  .contact-link:hover {
    color: var(--color-accent-warm);
  }

  .contact-text {
    color: var(--color-white);
    font-size: var(--text-base);
    margin: 0;
    line-height: var(--leading-relaxed);
  }

  .cta-text {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-accent-warm);
    margin-top: var(--space-xl);
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .business-card {
      height: 500px;
    }

    .card-front,
    .card-back {
      padding: var(--space-xl);
    }

    .card-illustration {
      width: 150px;
      height: 112px;
    }
  }
</style>

<script>
  // Business Card Flip Interaction with Tracking
  function flipCard() {
    const card = document.getElementById('businessCard');
    if (card) {
      card.classList.toggle('flipped');

      // Track flip event
      if (card.classList.contains('flipped')) {
        trackCardFlip();
      }
    }
  }

  function trackCardFlip() {
    // Google Analytics 4 tracking (if gtag is available)
    if (typeof gtag !== 'undefined') {
      gtag('event', 'business_card_flip', {
        'event_category': 'engagement',
        'event_label': 'contact_reveal'
      });
    }

    // Console log for development
    console.log('Business card flipped - contact info revealed');

    // Could also send to custom endpoint:
    // fetch('/api/track', {
    //   method: 'POST',
    //   body: JSON.stringify({ event: 'card_flip', timestamp: Date.now() })
    // });
  }

  // Make function globally available
  if (typeof window !== 'undefined') {
    (window as any).flipCard = flipCard;
  }
</script>
